<div class="overflow-hidden border border-gray-300 dark:border-gray-800 bg-white dark:bg-gray-900">
  <table class="min-w-full divide-y divide-gray-300 dark:divide-gray-800">
    <thead class="bg-gray-50 dark:bg-gray-900">
      <tr class="font-mono text-xs">
        <th scope="col" class="hidden sm:table-cell px-4 py-3 w-16">
          <!-- image column -->
        </th>
        <th scope="col" class="px-4 py-3 text-left text-gray-600 dark:text-gray-500">
          title
        </th>
        <th scope="col" class="hidden md:table-cell px-4 py-3 text-left text-gray-600 dark:text-gray-500">
          series
        </th>
        <th scope="col" class="hidden lg:table-cell px-4 py-3 text-left text-gray-600 dark:text-gray-500">
          tags
        </th>
        <th scope="col" class="px-4 py-3 text-left text-gray-600 dark:text-gray-500">
          date
        </th>
        <th scope="col" class="hidden sm:table-cell px-4 py-3 text-right text-gray-600 dark:text-gray-500">
          ♥
        </th>
      </tr>
    </thead>
    <tbody class="bg-white dark:bg-gray-800">
      <% documents.each do |doc| %>
        <%
          # Only use specific routes for published documents
          # Unpublished documents always use generic document_path
          path = if doc.published?
            case doc.kind
            when "post" then public_post_path(doc)
            when "page" then public_page_path(doc)
            when "note" then public_note_path(doc)
            else public_document_path(doc)
            end
          else
            public_document_path(doc)
          end
        %>
        <tr class="group border-l-2 border-transparent hover:border-green-500 odd:bg-gray-50 dark:odd:bg-gray-900/75 even:bg-white dark:even:bg-gray-900 hover:bg-gray-100 dark:hover:bg-gray-800/70 transition-all cursor-pointer" onclick="window.location='<%= path %>'">
          <!-- Image -->
          <td class="hidden sm:table-cell px-4 py-3">
            <% if doc.portrait.attached? %>
              <div class="w-12 h-12 overflow-hidden bg-gray-100 dark:bg-gray-800 border border-gray-200 dark:border-gray-700">
                <%= image_tag doc.portrait, class: "w-full h-full object-cover", alt: doc.title %>
              </div>
            <% elsif doc.series && doc.series.portrait.attached? && doc.series_position.present? %>
              <div class="relative w-12 h-12 overflow-hidden bg-gray-100 dark:bg-gray-800 border border-gray-200 dark:border-gray-700">
                <%= image_tag doc.series.portrait, class: "w-full h-full object-cover opacity-40", alt: doc.series.title %>
                <div class="absolute inset-0 flex items-center justify-center">
                  <span class="text-lg font-mono font-bold text-gray-700 dark:text-gray-300">
                    <%= doc.series_position %>
                  </span>
                </div>
              </div>
            <% end %>
          </td>

          <!-- Title -->
          <td class="px-4 py-3">
            <div>
              <div class="text-sm text-gray-900 dark:text-gray-200 group-hover:text-green-600 dark:group-hover:text-green-500 transition-colors line-clamp-1">
                <%= doc.title %>
              </div>
              <% if doc.description.present? %>
                <div class="text-xs text-gray-500 dark:text-gray-600 line-clamp-1 mt-1">
                  <%= doc.description %>
                </div>
              <% end %>
            </div>
          </td>

          <!-- Series -->
          <td class="hidden md:table-cell px-4 py-3">
            <% if doc.series && doc.series.title != "Uncategorized" %>
              <span class="text-xs font-mono text-gray-600 dark:text-gray-500">
                ~ <%= doc.series.title %>
              </span>
            <% else %>
              <span class="text-xs text-gray-400 dark:text-gray-700">—</span>
            <% end %>
          </td>

          <!-- Tags -->
          <td class="hidden lg:table-cell px-4 py-3" onclick="event.stopPropagation()">
            <% if doc.tags.any? %>
              <div class="flex flex-wrap gap-2 font-mono text-xs">
                <% doc.tags.limit(3).each do |tag| %>
                  <%= link_to public_tag_path(tag), class: "text-gray-500 dark:text-gray-600 hover:text-green-600 dark:hover:text-green-500 transition-colors" do %>
                    #<%= tag.title %>
                  <% end %>
                <% end %>
                <% if doc.tags.count > 3 %>
                  <span class="text-gray-500 dark:text-gray-600">
                    +<%= doc.tags.count - 3 %>
                  </span>
                <% end %>
              </div>
            <% else %>
              <span class="text-xs text-gray-400 dark:text-gray-700">—</span>
            <% end %>
          </td>

          <!-- Date -->
          <td class="px-4 py-3 whitespace-nowrap text-xs font-mono text-gray-500 dark:text-gray-600">
            <% if doc.published_at.present? %>
              <time datetime="<%= doc.published_at.iso8601 %>">
                <%= time_ago_in_words(doc.published_at) %> ago
              </time>
            <% elsif doc.published %>
              <time datetime="<%= doc.created_at.iso8601 %>">
                <%= time_ago_in_words(doc.created_at) %> ago
              </time>
            <% else %>
              <span>draft</span>
            <% end %>
          </td>

          <!-- Likes -->
          <td class="hidden sm:table-cell px-4 py-3 whitespace-nowrap text-xs font-mono text-gray-500 dark:text-gray-600 text-right">
            <%= doc.likes.count %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if documents.empty? %>
    <div class="text-center py-12 font-mono">
      <p class="text-gray-500 dark:text-gray-600 text-sm">nothing here yet...</p>
    </div>
  <% end %>
</div>
