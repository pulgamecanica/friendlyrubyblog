<% if documents.any? %>
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% documents.each do |doc| %>
      <%= render partial: "public/documents/card", locals: { doc: doc } %>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-16">
    <svg class="h-24 w-24 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
    </svg>
    <h3 class="text-xl font-semibold text-gray-900 mb-2"><%= empty_title || "No documents found" %></h3>
    <p class="text-gray-600"><%= empty_message || "Check back soon for new content!" %></p>
  </div>
<% end %>
