<% if documents.any? %>
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% documents.each do |doc| %>
      <%= render partial: "public/documents/card", locals: { doc: doc } %>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-16 font-mono">
    <p class="text-gray-500 dark:text-gray-600 text-sm"><%= empty_message || "nothing here yet..." %></p>
  </div>
<% end %>
