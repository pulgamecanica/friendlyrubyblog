<dialog id="<%= modal_id %>" class="backdrop:bg-black/90 bg-transparent p-0 max-w-full max-h-full w-screen h-screen" onclick="if(event.target === this) this.close()">
  <div class="relative w-full h-full flex items-center justify-center p-8">
    <!-- Close button (absolute) -->
    <button type="button"
            onclick="this.closest('dialog').close()"
            class="absolute top-4 right-4 z-50 p-2 bg-black/50 hover:bg-black/70 text-white rounded-full transition-colors">
      <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
      </svg>
    </button>

    <!-- Canvas container (main canvas will be moved here) -->
    <div id="<%= modal_id %>-canvas-container" class="relative bg-black rounded-lg shadow-2xl max-w-6xl w-full" style="aspect-ratio: 4/3;">
      <!-- Canvas gets moved here dynamically -->
    </div>
  </div>
</dialog>
