<% content_for :title, "#{@series.title} · series" %>

<!-- Header -->
<% if @series.portrait.attached? %>
  <div class="relative w-full h-64 mb-8 overflow-hidden border border-gray-300 dark:border-gray-800 bg-gray-100 dark:bg-gray-800">
    <%= image_tag @series.portrait, class: "w-full h-full object-cover", alt: @series.title %>
  </div>
<% end %>


<div class="mb-8 pb-8 border-b border-gray-200 dark:border-gray-800">
  <%= link_to public_series_index_path, class: "inline-flex items-center gap-2 text-sm font-mono text-gray-500 dark:text-gray-600 hover:text-green-600 dark:hover:text-green-500 transition-colors mb-4" do %>
    ← back
  <% end %>

  <h1 class="text-3xl font-normal text-gray-900 dark:text-gray-200 mb-3 font-mono">
    ~ <%= @series.title %>
  </h1>

  <% if @series.description.present? %>
    <p class="text-base text-gray-600 dark:text-gray-500 max-w-3xl mb-4 leading-relaxed">
      <%= @series.description %>
    </p>
  <% end %>

  <div class="text-xs font-mono text-gray-500 dark:text-gray-600">
    <%= @documents.count %> <%= 'post'.pluralize(@documents.count) %>
  </div>
</div>

<!-- Articles -->
<%= render partial: "public/documents/list", locals: {
  documents: @documents,
  title: "Articles in this series",
  storage_key: "series_#{@series.id}_view_mode",
  empty_title: "No articles in this series yet",
  empty_message: "Check back soon for new content!"
} %>
