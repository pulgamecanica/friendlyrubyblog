<% if series_list.any? %>
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
    <% series_list.each do |series| %>
      <%= render partial: "public/series/card", locals: { series: series } %>
    <% end %>
  </div>
<% else %>
  <div class="text-center py-20">
    <svg class="h-24 w-24 text-gray-300 mx-auto mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
    </svg>
    <h3 class="text-2xl font-bold text-gray-900 mb-2">No series yet</h3>
    <p class="text-gray-600">Check back soon for new learning paths and series!</p>
  </div>
<% end %>
