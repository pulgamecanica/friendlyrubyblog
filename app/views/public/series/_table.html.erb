<div class="overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-sm">
  <table class="min-w-full divide-y divide-gray-200">
    <thead class="bg-gradient-to-r from-indigo-50 to-purple-50">
      <tr>
        <th scope="col" class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
          Series
        </th>
        <th scope="col" class="hidden md:table-cell px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
          Description
        </th>
        <th scope="col" class="px-6 py-4 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider">
          Articles
        </th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-gray-100">
      <% series_list.each do |series| %>
        <tr class="group hover:bg-gradient-to-r hover:from-indigo-50/50 hover:to-purple-50/50 transition-colors cursor-pointer" onclick="window.location='<%= public_series_path(series) %>'">
          <!-- Series Name -->
          <td class="px-6 py-4">
            <div class="flex items-center gap-3">
              <div class="flex h-10 w-10 items-center justify-center rounded-xl bg-gradient-to-br from-indigo-500 to-purple-600 text-white shadow-md flex-shrink-0">
                <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                </svg>
              </div>
              <div class="min-w-0">
                <div class="text-sm font-semibold text-gray-900 group-hover:text-indigo-600 transition-colors truncate">
                  <%= series.title %>
                </div>
              </div>
            </div>
          </td>

          <!-- Description -->
          <td class="hidden md:table-cell px-6 py-4">
            <% if series.description.present? %>
              <p class="text-sm text-gray-600 line-clamp-2">
                <%= series.description %>
              </p>
            <% else %>
              <span class="text-sm text-gray-400 italic">No description</span>
            <% end %>
          </td>

          <!-- Article Count -->
          <td class="px-6 py-4 text-center">
            <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-indigo-100 text-indigo-700 text-sm font-semibold">
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              <%= series.documents.published.count %>
            </span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if series_list.empty? %>
    <div class="text-center py-12">
      <svg class="h-16 w-16 text-gray-300 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
      </svg>
      <h3 class="text-lg font-semibold text-gray-900 mb-1">No series found</h3>
      <p class="text-gray-600">Check back soon for new learning paths!</p>
    </div>
  <% end %>
</div>
