<div class="overflow-hidden border border-gray-300 dark:border-gray-800 bg-white dark:bg-gray-900">
  <table class="min-w-full divide-y divide-gray-300 dark:divide-gray-800">
    <thead class="bg-gray-50 dark:bg-gray-900">
      <tr class="font-mono text-xs">
        <th scope="col" class="hidden sm:table-cell px-4 py-3 w-16">
          <!-- image -->
        </th>
        <th scope="col" class="px-4 py-3 text-left text-gray-600 dark:text-gray-500">
          series
        </th>
        <th scope="col" class="hidden md:table-cell px-4 py-3 text-left text-gray-600 dark:text-gray-500">
          description
        </th>
        <th scope="col" class="px-4 py-3 text-right text-gray-600 dark:text-gray-500">
          posts
        </th>
      </tr>
    </thead>
    <tbody class="bg-white dark:bg-gray-800">
      <% series_list.each do |series| %>
        <tr class="group border-l-2 border-transparent hover:border-green-500 odd:bg-gray-50 dark:odd:bg-gray-900/75 even:bg-white dark:even:bg-gray-900 hover:bg-gray-100 dark:hover:bg-gray-800/70 transition-all cursor-pointer" onclick="window.location='<%= public_series_path(series) %>'">
          <!-- Image -->
          <td class="hidden sm:table-cell px-4 py-3">
            <% if series.portrait.attached? %>
              <div class="w-12 h-12 overflow-hidden bg-gray-100 dark:bg-gray-800 border border-gray-200 dark:border-gray-700">
                <%= image_tag series.portrait, class: "w-full h-full object-cover", alt: series.title %>
              </div>
            <% end %>
          </td>

          <!-- Series Name -->
          <td class="px-4 py-3">
            <div class="text-sm text-gray-900 dark:text-gray-200 group-hover:text-green-600 dark:group-hover:text-green-500 transition-colors line-clamp-1 font-mono">
              ~ <%= series.title %>
            </div>
          </td>

          <!-- Description -->
          <td class="hidden md:table-cell px-4 py-3">
            <% if series.description.present? %>
              <p class="text-xs text-gray-600 dark:text-gray-500 line-clamp-2">
                <%= series.description %>
              </p>
            <% else %>
              <span class="text-xs text-gray-400 dark:text-gray-700">â€”</span>
            <% end %>
          </td>

          <!-- Post Count -->
          <td class="px-4 py-3 text-right whitespace-nowrap text-xs font-mono text-gray-500 dark:text-gray-600">
            <%= series.documents.published.count %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if series_list.empty? %>
    <div class="text-center py-12 font-mono">
      <p class="text-gray-500 dark:text-gray-600 text-sm">nothing here yet...</p>
    </div>
  <% end %>
</div>
