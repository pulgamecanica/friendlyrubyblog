<article class="group relative h-full border border-gray-300 dark:border-gray-800 bg-white dark:bg-gray-900 transition-colors hover:border-green-500 dark:hover:border-green-500 cursor-pointer overflow-hidden" onclick="window.location='<%= public_series_path(series) %>'">
  <!-- Portrait Image -->
  <% if series.portrait.attached? %>
    <div class="w-full h-48 overflow-hidden bg-gray-100 dark:bg-gray-800">
      <%= image_tag series.portrait, class: "w-full h-full object-cover", alt: series.title %>
    </div>
  <% end %>

  <div class="relative p-5">
    <!-- Title -->
    <h2 class="text-lg font-normal text-gray-900 dark:text-gray-200 mb-3 group-hover:text-green-600 dark:group-hover:text-green-500 transition-colors">
      ~ <%= series.title %>
    </h2>

    <!-- Description -->
    <p class="text-sm text-gray-600 dark:text-gray-500 line-clamp-3 mb-4 leading-relaxed">
      <%= series.description.presence || "..." %>
    </p>

    <!-- Footer -->
    <div class="flex items-center justify-between pt-4 border-t border-gray-200 dark:border-gray-800">
      <div class="flex items-center gap-2 text-xs font-mono text-gray-500 dark:text-gray-600">
        <span><%= series.documents.published.count %> <%= 'post'.pluralize(series.documents.published.count) %></span>
      </div>

      <!-- Arrow indicator -->
      <div class="text-xs font-mono text-green-600 dark:text-green-500 group-hover:text-green-700 dark:group-hover:text-green-400 transition-colors">
        â†’
      </div>
    </div>
  </div>
</article>
