<% content_for :title, "Series Â· Friendlyrubyblog" %>
<h1 class="text-2xl font-semibold mb-6">Series</h1>

<ul class="grid sm:grid-cols-2 gap-6">
  <% @series.each do |s| %>
    <li class="rounded-xl border bg-white p-5 hover:shadow-md transition">
      <h2 class="text-lg font-semibold">
        <%= link_to s.title, public_series_path(s), class: "hover:underline" %>
      </h2>
      <% if s.description.present? %>
        <p class="mt-2 text-sm text-gray-600 line-clamp-3"><%= s.description %></p>
      <% end %>
    </li>
  <% end %>
</ul>
