<%= form_with model: [:author, series], class: "space-y-6" do |f| %>
  <% if series.errors.any? %>
    <div class="rounded-md bg-red-50 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(series.errors.count, "error") %> prohibited this series from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside space-y-1">
              <% series.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :title,
        class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2",
        placeholder: "Enter series title" %>
  </div>

  <div>
    <%= f.label :slug, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :slug,
        placeholder: "optional - auto-generated from title",
        class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2" %>
    <p class="mt-1 text-xs text-gray-500">
      <svg class="inline w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      Leave blank to auto-generate from title
    </p>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :description,
        rows: 4,
        class: "w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2",
        placeholder: "Describe what this series is about..." %>
  </div>

  <div class="flex items-center justify-between pt-4 border-t border-gray-200">
    <div class="flex items-center gap-3">
      <%= f.submit series.persisted? ? "Save Changes" : "Create Series",
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= link_to author_series_index_path,
            class: "text-sm text-gray-600 hover:text-gray-900" do %>
        Cancel
      <% end %>
    </div>
    <% if series.persisted? %>
      <%= button_to author_series_path(series),
          method: :delete,
          class: "inline-flex items-center px-3 py-2 text-sm font-medium text-red-600 hover:text-red-800",
          form: { data: { turbo_confirm: "Are you sure you want to delete this series? All documents will be moved to 'Uncategorized'." } } do %>
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Delete Series
      <% end %>
    <% end %>
  </div>
<% end %>
