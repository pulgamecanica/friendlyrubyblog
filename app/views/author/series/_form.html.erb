<%= form_with model: [:author, series], class: "space-y-6" do |f| %>
  <% if series.errors.any? %>
    <div class="rounded-md bg-red-50 dark:bg-red-900/20 p-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <%= icon_x_circle size: :md, color: :red %>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-400">
            <%= pluralize(series.errors.count, "error") %> prohibited this series from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700 dark:text-red-300">
            <ul class="list-disc list-inside space-y-1">
              <% series.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div>
    <%= f.label :title, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
    <%= f.text_field :title,
        class: "w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2",
        placeholder: "Enter series title" %>
  </div>

  <div>
    <%= f.label :slug, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
    <%= f.text_field :slug,
        placeholder: "optional - auto-generated from title",
        class: "w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2" %>
    <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">
      <%= icon_info size: :xs, class: "inline mr-1" %>
      Leave blank to auto-generate from title
    </p>
  </div>


  <div data-controller="image-preview">
    <%= f.label :portrait, "Portrait Image", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
    <div class="space-y-3">
      <!-- Current Image Preview -->
      <% if series.portrait.attached? %>
        <div class="relative inline-block" data-image-preview-target="currentImage">
          <%= image_tag series.portrait,
              class: "w-32 h-32 object-cover rounded-lg border border-gray-300 dark:border-gray-600",
              alt: "Document portrait" %>
          <div class="absolute top-1 right-1">
            <%= link_to remove_portrait_author_series_path(series),
                method: :delete,
                data: {
                  confirm: "Remove portrait image?",
                  turbo_method: :delete,
                  turbo_frame: "document_metadata"
                },
                class: "bg-red-500 text-white rounded-full w-6 h-6 flex items-center justify-center text-xs hover:bg-red-600" do %>
              Ã—
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="w-32 h-32 border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-lg flex items-center justify-center" data-image-preview-target="currentImage">
          <div class="text-center text-gray-400 dark:text-gray-500">
            <%= icon_image size: "xl", class: "mx-auto mb-2" %>
            <p class="text-xs text-gray-500 dark:text-gray-400">No image</p>
          </div>
        </div>
      <% end %>

      <!-- New Image Preview (hidden by default) -->
      <div data-image-preview-target="preview" style="display: none;" class="space-y-2">
        <p class="text-sm font-medium text-green-700 dark:text-green-400">New image to upload:</p>
      </div>

      <!-- File Upload -->
      <%= f.file_field :portrait,
          accept: "image/*",
          data: { "image-preview-target": "input" },
          class: "block w-full text-sm text-gray-500 dark:text-gray-400 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-indigo-50 dark:file:bg-indigo-900 file:text-indigo-700 dark:file:text-indigo-300 hover:file:bg-indigo-100 dark:hover:file:bg-indigo-800" %>
      <p class="text-xs text-gray-500 dark:text-gray-400">PNG, JPG, JPEG up to 10MB</p>
    </div>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1" %>
    <%= f.text_area :description,
        rows: 4,
        class: "w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 px-3 py-2",
        placeholder: "Describe what this series is about..." %>
  </div>

  <div class="flex items-center justify-between pt-4 border-t border-gray-200 dark:border-gray-700">
    <div class="flex items-center gap-3">
      <%= f.submit series.persisted? ? "Save Changes" : "Create Series",
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 dark:bg-indigo-700 hover:bg-indigo-700 dark:hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      <%= link_to author_series_index_path,
            class: "text-sm text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-200" do %>
        Cancel
      <% end %>
    </div>
    <% if series.persisted? %>
      <%= button_to author_series_path(series),
          method: :delete,
          class: "inline-flex items-center px-3 py-2 text-sm font-medium text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300",
          form: { data: { turbo_confirm: "Are you sure you want to delete this series? All documents will be moved to 'Uncategorized'." } } do %>
        <%= icon_trash size: :sm, class: "mr-1" %>
        Delete Series
      <% end %>
    <% end %>
  </div>
<% end %>
