<%= link_to edit_author_document_path(document), class: "group block" do %>
  <div class="flex items-center justify-between py-3 px-4 bg-white rounded border border-gray-200 hover:border-indigo-300 hover:shadow-sm transition-all cursor-pointer">
    <div class="flex items-center gap-3 flex-1 min-w-0">
      <span class="text-xs font-medium text-gray-400 w-8 flex-shrink-0">#<%= document.series_position %></span>
      <div class="flex-1 min-w-0">
        <div class="text-sm font-medium text-gray-900 group-hover:text-indigo-600 truncate">
          <%= document.title %>
        </div>
        <div class="flex items-center gap-2 mt-1">
          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%=
            case document.kind
            when 'post' then 'bg-blue-100 text-blue-800'
            when 'note' then 'bg-green-100 text-green-800'
            when 'page' then 'bg-purple-100 text-purple-800'
            end
          %>">
            <%= document.kind.capitalize %>
          </span>
          <% if document.published? %>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 text-green-800">
              Published
            </span>
          <% else %>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-600">
              Draft
            </span>
          <% end %>
        </div>
      </div>
    </div>
    <div class="flex items-center gap-4 ml-4 flex-shrink-0">
      <span class="text-xs text-gray-500 whitespace-nowrap"><%= time_ago_in_words(document.updated_at) %> ago</span>
      <% if document.published? %>
        <%= link_to public_document_path(document),
            class: "text-indigo-600 hover:text-indigo-900 flex-shrink-0",
            target: "_blank",
            title: "View published",
            onclick: "event.stopPropagation();" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        <% end %>
      <% else %>
        <div class="w-4"></div>
      <% end %>
    </div>
  </div>
<% end %>
