<%= link_to edit_author_document_path(document), class: "group block" do %>
  <div class="flex items-center justify-between py-3 px-4 bg-white dark:bg-gray-800 rounded border border-gray-200 dark:border-gray-700 hover:border-indigo-300 dark:hover:border-indigo-500 hover:shadow-sm transition-all cursor-pointer">
    <div class="flex items-center gap-3 flex-1 min-w-0">
      <span class="text-xs font-medium text-gray-400 dark:text-gray-500 w-8 flex-shrink-0">#<%= document.series_position %></span>
      <div class="flex-1 min-w-0">
        <div class="text-sm font-medium text-gray-900 dark:text-white group-hover:text-indigo-600 dark:group-hover:text-indigo-400 truncate">
          <%= document.title %>
        </div>
        <div class="flex items-center gap-2 mt-1">
          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%=
            case document.kind
            when 'post' then 'bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-200'
            when 'note' then 'bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200'
            when 'page' then 'bg-purple-100 dark:bg-purple-900 text-purple-800 dark:text-purple-200'
            end
          %>">
            <%= document.kind.capitalize %>
          </span>
          <% if document.published? %>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200">
              Published
            </span>
          <% else %>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300">
              Draft
            </span>
          <% end %>
        </div>
      </div>
    </div>
    <div class="flex items-center gap-4 ml-4 flex-shrink-0">
      <span class="text-xs text-gray-500 dark:text-gray-400 whitespace-nowrap"><%= time_ago_in_words(document.updated_at) %> ago</span>
      <% if document.published? %>
        <%= link_to public_document_path(document),
            class: "text-indigo-600 dark:text-indigo-400 hover:text-indigo-900 dark:hover:text-indigo-300 flex-shrink-0",
            target: "_blank",
            title: "View published",
            onclick: "event.stopPropagation();" do %>
          <%= icon_external_link size: :sm %>
        <% end %>
      <% else %>
        <div class="w-4"></div>
      <% end %>
    </div>
  </div>
<% end %>
