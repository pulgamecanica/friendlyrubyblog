<%= form_with model: [:author, document],
              data: { turbo_frame: "document_metadata" },
              class: "space-y-6" do |f| %>

  <%= f.hidden_field :kind, value: (document.kind.presence || "post") %>

  <!-- Basic Information -->
  <div class="grid md:grid-cols-2 gap-6">
    <div>
      <%= f.label :title, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
      <%= f.text_field :title,
          class: "w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 shadow-sm p-1 focus:border-indigo-500 focus:ring-indigo-500",
          placeholder: "Document title..." %>
    </div>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
    <%= f.text_area :description, rows: 3,
        class: "w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 shadow-sm p-1 focus:border-indigo-500 focus:ring-indigo-500",
        placeholder: "Brief description of the document..." %>
  </div>

  <!-- Portrait Image -->
  <div data-controller="image-preview">
    <%= f.label :portrait, "Portrait Image", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
    <div class="space-y-3">
      <!-- Current Image Preview -->
      <% if document.portrait.attached? %>
        <div class="relative inline-block" data-image-preview-target="currentImage">
          <%= image_tag document.portrait,
              class: "w-32 h-32 object-cover rounded-lg border border-gray-300 dark:border-gray-600",
              alt: "Document portrait" %>
          <div class="absolute top-1 right-1">
            <%= link_to remove_portrait_author_document_path(document),
                method: :delete,
                data: {
                  confirm: "Remove portrait image?",
                  turbo_method: :delete,
                  turbo_frame: "document_metadata"
                },
                class: "bg-red-500 text-white rounded-full w-6 h-6 flex items-center justify-center text-xs hover:bg-red-600" do %>
              Ã—
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="w-32 h-32 border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-lg flex items-center justify-center" data-image-preview-target="currentImage">
          <div class="text-center text-gray-400 dark:text-gray-500">
            <%= icon_image size: "xl", class: "mx-auto mb-2" %>
            <p class="text-xs text-gray-500 dark:text-gray-400">No image</p>
          </div>
        </div>
      <% end %>

      <!-- New Image Preview (hidden by default) -->
      <div data-image-preview-target="preview" style="display: none;" class="space-y-2">
        <p class="text-sm font-medium text-green-700 dark:text-green-400">New image to upload:</p>
      </div>

      <!-- File Upload -->
      <%= f.file_field :portrait,
          accept: "image/*",
          data: { "image-preview-target": "input" },
          class: "block w-full text-sm text-gray-500 dark:text-gray-400 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-indigo-50 dark:file:bg-indigo-900 file:text-indigo-700 dark:file:text-indigo-300 hover:file:bg-indigo-100 dark:hover:file:bg-indigo-800" %>
      <p class="text-xs text-gray-500 dark:text-gray-400">PNG, JPG, JPEG up to 10MB</p>
    </div>
  </div>

  <!-- Series and Tags -->
  <div class="grid md:grid-cols-2 gap-6">
    <div>
      <%= f.label :series_id, "Series", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
      <%= f.select :series_id,
          options_from_collection_for_select(Series.order(:title), :id, :title, document.series_id),
          { include_blank: "Select series..." },
          class: "w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 shadow-sm p-1 focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :series_position, "Position in Series", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
      <%= f.number_field :series_position,
          class: "w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 shadow-sm p-1 focus:border-indigo-500 focus:ring-indigo-500",
          placeholder: "Optional position..." %>
    </div>
  </div>

  <div>
    <%= f.label :tag_ids, "Tags", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>

    <!-- Existing Tags -->
    <% if Tag.any? %>
      <div class="mb-4">
        <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">Select existing tags:</p>
        <%= f.collection_check_boxes :tag_ids, Tag.order(:title), :id, :title do |b| %>
          <div class="flex items-center mb-2">
            <%= b.check_box(class: "rounded border-gray-300 dark:border-gray-600 text-indigo-600 shadow-sm p-1 focus:border-indigo-500 focus:ring-indigo-500") %>
            <%= b.label(class: "ml-2 text-sm text-gray-700 dark:text-gray-300") %>
          </div>
        <% end %>
      </div>
    <% end %>

    <!-- New Tags Input -->
    <div>
      <%= label_tag :new_tags, "Add new tags (comma-separated):", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
      <%= text_field_tag :new_tags, "",
          class: "w-full rounded-md border-gray-300 dark:border-gray-600 dark:bg-gray-700 dark:text-gray-100 shadow-sm p-1 focus:border-indigo-500 focus:ring-indigo-500",
          placeholder: "e.g., ruby, programming, tutorial" %>
      <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Enter tag names separated by commas. New tags will be created automatically.</p>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex justify-end items-center pt-4 border-t dark:border-gray-700">
    <%= f.submit(document.persisted? ? "Save Changes" : "Create Document",
              class: "px-6 py-2 bg-indigo-600 dark:bg-indigo-700 text-white text-sm font-medium rounded-md hover:bg-indigo-700 dark:hover:bg-indigo-600 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2") %>
  </div>
<% end %>
