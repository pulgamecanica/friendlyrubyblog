<%= form_with model: [:author, document],
              data: { turbo_frame: "document_metadata" },
              class: "space-y-6" do |f| %>

  <%= f.hidden_field :kind, value: (document.kind.presence || "post") %>

  <!-- Basic Information -->
  <div class="grid md:grid-cols-2 gap-6">
    <div>
      <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.text_field :title,
          class: "w-full rounded-md border-gray-300 shadow-sm p-1 focus:border-indigo-500 focus:ring-indigo-500",
          placeholder: "Document title..." %>
    </div>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_area :description, rows: 3,
        class: "w-full rounded-md border-gray-300 shadow-sm p-1 focus:border-indigo-500 focus:ring-indigo-500",
        placeholder: "Brief description of the document..." %>
  </div>

  <!-- Series and Tags -->
  <div class="grid md:grid-cols-2 gap-6">
    <div>
      <%= f.label :series_id, "Series", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.select :series_id,
          options_from_collection_for_select(Series.order(:title), :id, :title, document.series_id),
          { include_blank: "Select series..." },
          class: "w-full rounded-md border-gray-300 shadow-sm p-1 focus:border-indigo-500 focus:ring-indigo-500" %>
    </div>

    <div>
      <%= f.label :series_position, "Position in Series", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.number_field :series_position,
          class: "w-full rounded-md border-gray-300 shadow-sm p-1 focus:border-indigo-500 focus:ring-indigo-500",
          placeholder: "Optional position..." %>
    </div>
  </div>

  <div>
    <%= f.label :tag_ids, "Tags", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.collection_check_boxes :tag_ids, Tag.order(:title), :id, :title do |b| %>
      <div class="flex items-center mb-2">
        <%= b.check_box(class: "rounded border-gray-300 text-indigo-600 shadow-sm p-1 focus:border-indigo-500 focus:ring-indigo-500") %>
        <%= b.label(class: "ml-2 text-sm text-gray-700") %>
      </div>
    <% end %>
  </div>

  <!-- Actions -->
  <div class="flex justify-end items-center pt-4 border-t">
    <%= f.submit(document.persisted? ? "Save Changes" : "Create Document",
              class: "px-6 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2") %>
  </div>
<% end %>
