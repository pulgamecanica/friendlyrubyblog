<div class="bg-white dark:bg-gray-800 border-b dark:border-gray-700" data-controller="collapsible" data-collapsible-expanded-value="false">
  <!-- Collapsed View Header -->
  <div class="px-6 py-4 cursor-pointer hover:bg-gray-50 dark:hover:bg-gray-700"
       data-action="click->collapsible#toggle"
       data-collapsible-target="toggle">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <!-- Chevron Icon -->
        <%= icon_chevron_down size: "lg", 'data-collapsible-target':"icon", class: "text-gray-500 dark:text-gray-400 transition-transform duration-200" %>

        <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100">Document Settings</h2>
      </div>

      <!-- Collapsed Summary -->
      <%= render "metadata_summary", document: @document %>
    </div>
  </div>

  <!-- Expanded Content -->
  <div class="border-t dark:border-gray-700" data-collapsible-target="content" style="display: none;">
    <div class="px-6 py-6 bg-gray-50 dark:bg-gray-900">
      <%= render "metadata_frame", document: @document %>
    </div>
  </div>
</div>