<!-- Update the form with fresh data -->
<%= turbo_stream.replace "document_metadata" do %>
  <%= render "metadata_frame", document: @document %>
<% end %>

<!-- Update the header title -->
<%= turbo_stream.replace "document_title" do %>
  <%= render "title_frame", document: @document %>
<% end %>

<!-- Update the collapsed summary -->
<%= turbo_stream.replace "metadata_summary" do %>
  <%= render "metadata_summary", document: @document %>
<% end %>

<!-- Show success toast -->
<%= success_toast "Document updated successfully!" %>