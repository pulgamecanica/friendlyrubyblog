<% content_for :title, "Comments Â· Author" %>

<div class="mx-auto max-w-7xl px-6 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Comments</h1>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
          <%= @comments.count %> <%= params[:status] ? params[:status] : 'total' %> comments
        </p>
      </div>
    </div>

    <!-- Filter Tabs -->
    <div class="border-b border-gray-200 dark:border-gray-700">
      <nav class="-mb-px flex space-x-8">
        <%= link_to author_comments_path,
            class: "#{params[:status].nil? ? 'border-indigo-500 dark:border-indigo-400 text-indigo-600 dark:text-indigo-400' : 'border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600'} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm inline-flex items-center transition-colors" do %>
          All
          <span class="ml-2 py-0.5 px-2 rounded-full text-xs bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300">
            <%= Comment.count %>
          </span>
        <% end %>
        <%= link_to author_comments_path(status: "visible"),
            class: "#{params[:status] == 'visible' ? 'border-indigo-500 dark:border-indigo-400 text-indigo-600 dark:text-indigo-400' : 'border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600'} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm inline-flex items-center transition-colors" do %>
          Visible
          <span class="ml-2 py-0.5 px-2 rounded-full text-xs bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-200">
            <%= Comment.where(status: "visible").count %>
          </span>
        <% end %>
        <%= link_to author_comments_path(status: "pending"),
            class: "#{params[:status] == 'pending' ? 'border-indigo-500 dark:border-indigo-400 text-indigo-600 dark:text-indigo-400' : 'border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600'} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm inline-flex items-center transition-colors" do %>
          Pending
          <span class="ml-2 py-0.5 px-2 rounded-full text-xs bg-yellow-100 dark:bg-yellow-900 text-yellow-800 dark:text-yellow-200">
            <%= Comment.where(status: "pending").count %>
          </span>
        <% end %>
        <%= link_to author_comments_path(status: "hidden"),
            class: "#{params[:status] == 'hidden' ? 'border-indigo-500 dark:border-indigo-400 text-indigo-600 dark:text-indigo-400' : 'border-transparent text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 hover:border-gray-300 dark:hover:border-gray-600'} whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm inline-flex items-center transition-colors" do %>
          Hidden
          <span class="ml-2 py-0.5 px-2 rounded-full text-xs bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300">
            <%= Comment.where(status: "hidden").count %>
          </span>
        <% end %>
      </nav>
    </div>
  </div>

  <% if@comments.any? %>
    <!-- Comments Table -->
    <div class="bg-white dark:bg-gray-800 rounded-lg shadow dark:shadow-gray-900 overflow-hidden transition-colors">
      <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
        <thead class="bg-gray-50 dark:bg-gray-950/20">
          <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Comment</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">On</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">By</th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Status</th>
            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Actions</th>
          </tr>
        </thead>
        <tbody id="comments" class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
          <%= render partial: "row", collection: @comments, as: :comment, locals: { current_status_filter: params[:status] } %>
        </tbody>
      </table>
    </div>
  <% else %>
    <!-- Empty State -->
    <div class="text-center py-12 bg-white dark:bg-gray-800 rounded-lg shadow dark:shadow-gray-900 transition-colors">
      <%= icon_chat size: "2xl", class: "mx-auto text-gray-400 dark:text-gray-600" %>
      <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No comments</h3>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
        <% if params[:status].present? %>
          No <%= params[:status] %> comments found.
        <% else %>
          No comments have been posted yet.
        <% end %>
      </p>
    </div>
  <% end %>
</div>
