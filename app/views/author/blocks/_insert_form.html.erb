<div class="block-insert-zone group relative px-4"
     data-controller="block-insert"
     data-block-insert-position-value="<%= position %>"
     data-block-insert-document-id-value="<%= document.id %>">

  <!-- Hover trigger line -->
  <div class="insert-trigger opacity-0 group-hover:opacity-100 transition-opacity duration-200 cursor-pointer"
       data-action="click->block-insert#showForm"
       data-block-insert-target="trigger">
    <div class="h-8 -mx-4 flex items-center justify-center relative flex-1">
      <div class="absolute inset-0 bg-gradient-to-r from-transparent via-blue-200 to-transparent"></div>
      <div class="relative bg-blue-500 text-white px-3 py-1 rounded-full text-xs font-medium shadow-sm">
        + Add Block
      </div>
    </div>
  </div>

  <!-- Block type selection form (hidden by default) -->
  <div class="insert-form hidden bg-white border border-gray-300 rounded-lg shadow-lg p-4 my-2 -mx-4"
       data-block-insert-target="form">

    <div class="text-sm font-medium text-gray-700 mb-3">Choose block type:</div>

    <div class="grid grid-cols-3 gap-3 mb-4">
      <!-- Markdown Block -->
      <button type="button"
              data-action="click->block-insert#selectType"
              data-type="MarkdownBlock"
              class="block-type-btn p-3 border border-gray-200 rounded-lg hover:border-blue-500 hover:bg-blue-50 transition-all group cursor-pointer">
        <div class="text-blue-600 mb-2">
          <svg class="w-6 h-6 mx-auto" fill="currentColor" viewBox="0 0 20 20">
            <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"/>
          </svg>
        </div>
        <div class="text-xs font-medium">Markdown</div>
        <div class="text-xs text-gray-500">Rich text content</div>
      </button>

      <!-- Code Block -->
      <button type="button"
              data-action="click->block-insert#selectType"
              data-type="CodeBlock"
              class="block-type-btn p-3 border border-gray-200 rounded-lg hover:border-green-500 hover:bg-green-50 transition-all group cursor-pointer">
        <div class="text-green-600 mb-2">
          <svg class="w-6 h-6 mx-auto" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="text-xs font-medium">Code</div>
        <div class="text-xs text-gray-500">Syntax highlighted</div>
      </button>

      <!-- HTML Block -->
      <button type="button"
              data-action="click->block-insert#selectType"
              data-type="HtmlBlock"
              class="block-type-btn p-3 border border-gray-200 rounded-lg hover:border-purple-500 hover:bg-purple-50 transition-all group cursor-pointer">
        <div class="text-purple-600 mb-2">
          <svg class="w-6 h-6 mx-auto" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M3 5a2 2 0 012-2h10a2 2 0 012 2v8a2 2 0 01-2 2h-2.22l.123.489.804.804A1 1 0 0113 18H7a1 1 0 01-.707-1.707l.804-.804L7.22 15H5a2 2 0 01-2-2V5zm5.771 7H5V5h10v7H8.771z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="text-xs font-medium">HTML</div>
        <div class="text-xs text-gray-500">Raw HTML content</div>
      </button>

      <!-- Image Block -->
      <button type="button"
              data-action="click->block-insert#selectType"
              data-type="ImageBlock"
              class="block-type-btn p-3 border border-gray-200 rounded-lg hover:border-orange-500 hover:bg-orange-50 transition-all group cursor-pointer">
        <div class="text-orange-600 mb-2">
          <svg class="w-6 h-6 mx-auto" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"/>
          </svg>
        </div>
        <div class="text-xs font-medium">Images</div>
        <div class="text-xs text-gray-500">Photo collection</div>
      </button>

      <!-- MLX42 Block -->
      <button type="button"
              data-action="click->block-insert#selectType"
              data-type="Mlx42Block"
              class="block-type-btn p-3 border border-gray-200 rounded-lg hover:border-purple-500 hover:bg-purple-50 transition-all group cursor-pointer">
        <div class="text-purple-600 mb-2">
          <svg class="w-6 h-6 mx-auto" fill="currentColor" viewBox="0 0 20 20">
            <path d="M3 1a1 1 0 000 2h1.22l.305 1.222a.997.997 0 00.01.042l1.358 5.43-.893.892C3.74 11.846 4.632 14 6.414 14H15a1 1 0 000-2H6.414l1-1H14a1 1 0 00.894-.553l3-6A1 1 0 0017 3H6.28l-.31-1.243A1 1 0 005 1H3zM16 16.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0zM6.5 18a1.5 1.5 0 100-3 1.5 1.5 0 000 3z"/>
          </svg>
        </div>
        <div class="text-xs font-medium">MLX42</div>
        <div class="text-xs text-gray-500">Graphics canvas</div>
      </button>
    </div>

    <div class="flex justify-end gap-2">
      <button type="button"
              data-action="click->block-insert#cancel"
              class="px-3 py-1.5 text-xs text-gray-600 hover:text-gray-800">
        Cancel
      </button>
    </div>
  </div>
</div>