<turbo-frame id="<%= dom_id(block) %>">
  <div class="rounded-lg border bg-white p-4 space-y-3">
    <div class="flex items-center justify-between">
      <p class="text-sm font-medium text-gray-700"><%= block.type.demodulize %> Â· Position <%= block.position %></p>
      <%= button_to "Delete", author_document_block_path(block.document, block),
            method: :delete,
            form: { data: { turbo_confirm: "Are you sure?" } },
            class: "text-xs text-red-600 hover:underline" %>
    </div>

    <%= render "author/blocks/form", document: block.document, block: block %>
  </div>
</turbo-frame>
