<turbo-frame id="<%= dom_id(block) %>">
  <article class="grid grid-cols-[1fr_200px] gap-4 group"
           data-controller="block-editor"
           data-block-editor-block-id-value="<%= block.id %>"
           data-block-editor-preview-url-value="<%= preview_author_document_blocks_path(block.document) %>">

    <!-- Main Content Column -->
    <div class="bg-white rounded-lg border border-gray-200 overflow-hidden">

      <!-- Normal Mode: Rendered Content -->
      <div data-block-editor-target="content"
           data-action="click->block-editor#handleContentClick"
           class="relative cursor-pointer hover:bg-gray-50 transition-colors">

        <div class="p-4">
          <% if block.is_a?(MarkdownBlock) %>
            <div class="prose prose-neutral max-w-none">
              <%= safe_html(text_to_markdown(block.data["markdown"].to_s)) %>
            </div>
          <% elsif block.is_a?(CodeBlock) %>
            <pre class="bg-gray-900 text-gray-100 p-4 rounded-lg overflow-x-auto text-sm"><code class="language-<%= block.data["language"] %>"><%= block.data["code"] %></code></pre>
          <% else %>
            <div class="prose prose-neutral max-w-none">
              <%= safe_html(block.data["html"].to_s) %>
            </div>
          <% end %>
        </div>

        <!-- Fade overlay for collapsed state -->
        <div data-block-editor-target="fadeOverlay"
             class="absolute bottom-0 left-0 right-0 h-12 bg-gradient-to-t from-white to-transparent opacity-0 transition-opacity"
             style="display: none;"></div>
      </div>

      <!-- Edit Mode: Editor Interface -->
      <div data-block-editor-target="editor"
           class="p-4"
           style="display: none;">

        <% if block.is_a?(MarkdownBlock) %>
          <!-- Markdown Editor -->
          <div class="grid grid-cols-1 gap-4">

            <!-- Textarea -->
            <div>
              <%= form_with model: [:author, block.document, block.becomes(Block)],
                            data: { turbo_frame: dom_id(block) },
                            class: "space-y-3" do |f| %>

                <%= f.text_area :data_markdown,
                    value: block.data["markdown"],
                    data: {
                      block_editor_target: "textarea",
                      action: "input->block-editor#renderPreview input->block-editor#autoResize"
                    },
                    class: "w-full border border-gray-300 rounded-lg p-3 font-mono text-sm resize-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                    placeholder: "Write your markdown here...",
                    rows: 8 %>

                <%= f.hidden_field :type %>
                <%= f.hidden_field :position %>

                <div class="flex justify-end">
                  <%= f.submit "Update Block",
                      class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500" %>
                </div>
              <% end %>
            </div>

            <!-- Preview -->
            <div data-block-editor-target="preview"
                 class="border border-gray-200 rounded-lg bg-gray-50">
              <div class="p-3 border-b border-gray-200 text-xs font-medium text-gray-600 uppercase tracking-wider">
                Preview
              </div>
              <div class="p-4 prose prose-neutral max-w-none">
                <%= safe_html(text_to_markdown(block.data["markdown"].to_s)) %>
              </div>
            </div>
          </div>

        <% elsif block.is_a?(CodeBlock) %>
          <!-- Code Editor -->
          <%= form_with model: [:author, block.document, block.becomes(Block)],
                        data: { turbo_frame: dom_id(block) },
                        class: "space-y-3" do |f| %>

            <%= f.text_field :data_language,
                value: block.data["language"],
                class: "w-full border border-gray-300 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                placeholder: "Language (e.g., ruby, javascript)" %>

            <%= f.text_area :data_code,
                value: block.data["code"],
                class: "w-full border border-gray-300 rounded-lg p-3 font-mono text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                placeholder: "Enter your code here...",
                rows: 12 %>

            <%= f.hidden_field :type %>
            <%= f.hidden_field :position %>

            <div class="flex justify-end">
              <%= f.submit "Update Block",
                  class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500" %>
            </div>
          <% end %>

        <% else %>
          <!-- Html Editor -->
          <%= form_with model: [:author, block.document, block.becomes(Block)],
                        data: { turbo_frame: dom_id(block) },
                        class: "space-y-3" do |f| %>

            <%= f.text_area :data_html,
                value: block.data["html"],
                class: "w-full border border-gray-300 rounded-lg p-3 text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
                placeholder: "Enter HTML content...",
                rows: 12 %>

            <%= f.hidden_field :type %>
            <%= f.hidden_field :position %>

            <div class="flex justify-end">
              <%= f.submit "Update Block",
                  class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500" %>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- Sticky Toolbar Column -->
    <div data-block-editor-target="toolbar"
         class="sticky top-20 h-fit">

      <!-- Block Info -->
      <div class="bg-white rounded-lg border border-gray-200 p-3 mb-3">
        <div class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-1">
          <%= block.type.demodulize %>
        </div>
        <div class="text-sm text-gray-700">
          Position <%= block.position %>
        </div>
      </div>

      <!-- Normal Mode Tools -->
      <div data-block-editor-target="normalTools"
           class="bg-white rounded-lg border border-gray-200 p-3 mb-3 space-y-2">

        <div class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">
          View
        </div>

        <button data-block-editor-target="collapseBtn"
                data-action="click->block-editor#toggleCollapse"
                class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
          Collapse
        </button>

        <%= button_to "Delete",
            author_document_block_path(block.document, block),
            method: :delete,
            form: { data: { turbo_confirm: "Delete this block?" } },
            class: "w-full px-3 py-2 text-sm border border-red-300 text-red-700 rounded-lg hover:bg-red-50 transition-colors" %>
      </div>

      <!-- Edit Mode Tools -->
      <div data-block-editor-target="editTools"
           class="bg-white rounded-lg border border-gray-200 p-3 mb-3 space-y-2"
           style="display: none;">

        <div class="text-xs font-medium text-gray-500 uppercase tracking-wider mb-2">
          Edit
        </div>

        <% if block.is_a?(MarkdownBlock) %>
          <button data-block-editor-target="previewBtn"
                  data-action="click->block-editor#togglePreview"
                  class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
            Hide Preview
          </button>

          <button data-block-editor-target="layoutBtn"
                  data-action="click->block-editor#toggleLayout"
                  class="w-full px-3 py-2 text-sm border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
            Stack Below
          </button>
        <% end %>

        <button data-action="click->block-editor#exitEditMode"
                class="w-full px-3 py-2 text-sm bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors">
          Done Editing
        </button>
      </div>
    </div>
  </article>
</turbo-frame>